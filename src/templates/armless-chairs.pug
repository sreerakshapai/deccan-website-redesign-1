extends partials/head.pug

block title 
        title Armless Chairs

block content
    .container
        .card
            .card-image
                img(src="images/categories/armless.png", class="category-page-img", alt="Armless Chairs, Deccan Plast Industries")
            .card-content
                h2.category-title.center-align Armless Chairs
                 h3.product-title.center-align Nano
                       
                p.category-description 
                    strong Nano
                    |    armless chairs are ideal for chair renting business, in school, collage libraries, kids bed rooms in homes, as study chairs.
                p.category-description 
                        strong Dimensions: 
                        |   (H) 785 mm, (W) 425 mm, (D) 430 mm
                p.category-description 
                    strong Key Features:
                    |
                ul
                    li.feature-list Compact and Strong
                    li.feature-list Suitable for hire business, homes, restaurants.
                    li.feature-list  Easy to stack and transport  
                    
                .card.product
                    .card-content
                       
                        .row.center-align
                            .col.m6.l3.offset-l3
                                .card.product-card.z-depth-2
                                    .card-image
                                        img(src="images/products/furniture/s_nano_1.png", alt="Nano Armless Chairs, Deccan Plast Industries.")
                                    .card-content.center-align
                                        span.card-title.grey-text.text-darken-4 Nano RED
                                        p.price MRP: ₹ 515/-
                                        .right-align
                                            a.btn-floating.waves-effect.waves-light.red.request-quote.modal-trigger(data-target="quote-modal", data-item="Nano RED")
                                                i.material-icons shopping_cart  
                            .col.m6.l3
                                .card.product-card.z-depth-2
                                    .card-image
                                        img(src="images/products/furniture/s_nano_2.png", alt="Nano Armless Chairs, Deccan Plast Industries.")
                                    .card-content.center-align
                                        span.card-title.grey-text.text-darken-4 Nano PBL 
                                        p.price MRP: ₹ 515/-
                                        .right-align
                                            a.btn-floating.waves-effect.waves-light.red.request-quote.modal-trigger(data-target="quote-modal", data-item="Nano PBL")
                                                i.material-icons shopping_cart  
                        .center-align                                                        
                                    a(href="products.html" class="waves-effect waves-light btn-small red") 
                                        i.material-icons.left home
                                        | Home                                                   
                       
                #quote-modal.modal
                    .modal-content
                        h3 Modal Header
                        p Please fill all your details.
                        form(action="", id="request-quote-form")
                            .input-field
                                input(placeholder="John Doe", id="rq-name", type="text", class="validate")
                                label(for="rq-name") Name
                            .input-field
                                input(placeholder="johndoe@gmail.com", id="rq-email", type="email", class="validate")
                                label(for="rq-email") Email
                            .input-field
                                input(placeholder="10 Digit Mobile No", id="rq-phone", type="tel", class="validate")
                                label(for="rq-phone") Phone    
                            .input-field
                                input(placeholder="575001", id="rq-pincode", type="number", class="validate")
                                label(for="rq-pincode") Pincode
                            .input-field
                                input(placeholder="Mangalore", id="rq-location", type="text", class="validate")
                                label(for="rq-location") Location
                            .input-field
                                textarea#rq-message.materialize-textarea  
                                label(for="rq-message")  Message                                                                                           
                    .modal-footer
                        a.modal-send.waves-effect.waves-green.btn.btn-flat(href="#") Send
                        a.modal-close.waves-effect.waves-green.btn.btn-flat(href="#") Close

                
